# Database Configuration
DB_USER=root
DB_PASSWORD=your_password_here
DB_HOST=localhost
DB_PORT=3306
DB_NAME=superapp_db
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5

# Server Configuration
SERVER_PORT=9090

# JWT/Authentication Configuration
JWKS_URL=https://api.asgardeo.io/t/your-org/oauth2/jwks
JWT_ISSUER=https://api.asgardeo.io/t/your-org/oauth2/token
JWT_AUDIENCE=your-client-id

# Firebase Configuration
# Path to your Firebase Admin SDK credentials JSON file
FIREBASE_CREDENTIALS_PATH=/path/to/firebase-admin-key.json

# Example: Absolute path
# FIREBASE_CREDENTIALS_PATH=/Users/yourname/code/superapp/go-backend/firebase-admin-key.json

# Or relative to project root
# FIREBASE_CREDENTIALS_PATH=./firebase-admin-key.json
